{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Social Science Tagging App",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "fs": {
        "writeFile": true,
        "createDir": true,
        "readFile": true,
        "readDir": true,
        "exists": true,
        "scope": [
          "$APP/*",
          "$DESKTOP/*",
          "$DOCUMENT/**",
          "$APPDATA/**",
          "$APPLOCALDATA/**"
        ]
      },
      "path": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Social Science Tagging App",
        "width": 800,
        "height": 600
      }
    ]
  }
}